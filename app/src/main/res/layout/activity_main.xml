<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:foregroundGravity="right"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">


        <edu.up.com.example.customcoloring.FruitView
            android:id="@+id/fruitview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ADD8E6" />

        <TextView
            android:id="@+id/textElement"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Selected Element:                    " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Red" />

        <SeekBar
            android:id="@+id/redBar"
            android:layout_width="272dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:foregroundGravity="clip_horizontal"
            android:max="255" />

        <TextView
            android:id="@+id/textGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Green" />

        <SeekBar
            android:id="@+id/greeenBar"
            android:layout_width="272dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:foregroundGravity="clip_horizontal"
            android:max="255" />

        <TextView
            android:id="@+id/textBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Blue" />

        <SeekBar
            android:id="@+id/blueBar"
            android:layout_width="272dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:foregroundGravity="clip_horizontal"
            android:max="255" />

    </LinearLayout>

</LinearLayout>